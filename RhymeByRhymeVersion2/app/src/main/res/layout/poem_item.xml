<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="260dp"
    android:background="#FFFFFF">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/poem_item_profile"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/poemTitle"
        android:layout_alignStart="@+id/poemTitle"
        android:layout_marginTop="11dp" />

    <TextView
        android:id="@+id/poem_item_name"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/poem_item_profile"
        android:layout_toRightOf="@+id/poem_item_profile"
        android:layout_toEndOf="@+id/poem_item_profile"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp" />

   <TextView
       android:id="@+id/poemDate"
       android:layout_width="wrap_content"
       android:layout_height="30dp"
       android:textSize="16sp"
       android:layout_below="@+id/poem_item_name"
       android:layout_toRightOf="@+id/poem_item_profile"
       android:layout_marginLeft="12dp"
       android:layout_marginStart="12dp"

        />


    <TextView
        android:id="@+id/poemTitle"
        android:textColor="#222222"
        android:layout_width="200dp"
        android:maxLines="1"
        android:layout_height="wrap_content"
        android:textSize="22dp"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/poem_item_profile"
        android:layout_alignLeft="@+id/poemText"
        android:layout_alignStart="@+id/poemText" />


    <TextView
        android:id="@+id/poemLikes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22dp"
        android:layout_alignBottom="@+id/full"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="14dp"
        android:layout_marginEnd="14dp" />


    <TextView
        android:id="@+id/poemText"
        android:maxLines="4"
        android:textSize="18dp"
        android:textColor="#222222"
        android:layout_width="260dp"
        android:layout_height="90dp"
        android:layout_above="@+id/poem_item_heart"
        android:layout_alignLeft="@+id/full"
        android:layout_alignStart="@+id/full"
        android:layout_below="@+id/poemTitle" />

    <TextView
        android:id="@+id/full"
        android:text="Прочесть полностью >"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:layout_marginBottom="8dp"/>

 <ImageView
     android:id="@+id/poem_item_heart"
     android:layout_width="30dp"
     android:layout_height="30dp"
     android:background="@drawable/heart"
     android:layout_marginRight="26dp"
     android:layout_marginEnd="26dp"
     android:layout_alignTop="@+id/poemLikes"
     android:layout_toLeftOf="@+id/poemLikes"
     android:layout_toStartOf="@+id/poemLikes" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F4F4F4"
        android:layout_alignParentBottom="true"
        >

    </View>


</RelativeLayout>