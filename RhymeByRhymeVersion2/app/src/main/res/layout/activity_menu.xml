<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:alpha="0.5">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="60dp"
    android:orientation="vertical">
    <TextView
        android:id="@+id/news_menu"
        android:textAlignment="center"
        android:layout_margin="10dp"
        android:textSize="30dp"
        android:textColor="#fff"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="НОВОСТИ"/>
    <TextView
        android:id="@+id/top_authors_menu"
        android:textAlignment="center"
        android:layout_margin="10dp"
        android:textSize="30dp"
        android:textColor="#fff"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ТОП АВТОРОВ"/>
    <TextView
        android:id="@+id/messages_menu"
        android:textAlignment="center"
        android:layout_margin="10dp"
        android:textSize="30dp"
        android:textColor="#fff"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="СООБЩЕНИЯ"/>
    <TextView
        android:id="@+id/liked_posts_menu"
        android:textAlignment="center"
        android:layout_margin="10dp"
        android:textSize="30dp"
        android:textColor="#fff"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ПОНРАВИВШИЕСЯ"/>
    <TextView
        android:id="@+id/notifications_menu"
        android:textAlignment="center"
        android:layout_margin="10dp"
        android:textSize="30dp"
        android:textColor="#fff"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="УВЕДОМЛЕНИЯ"/>
    <TextView
        android:id="@+id/settings_menu"
        android:textAlignment="center"
        android:layout_margin="10dp"
        android:textSize="30dp"
        android:textColor="#fff"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="НАСТРОЙКИ"/>
    <TextView
        android:id="@+id/exit_account_menu"
        android:textAlignment="center"
        android:layout_margin="10dp"
        android:textSize="30dp"
        android:textColor="#fff"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ВЫЙТИ"/>
</LinearLayout>
</RelativeLayout>
