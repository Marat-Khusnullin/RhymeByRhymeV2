<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.rhymebyrhymeversion2">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SplashScreenActivity"
            android:theme="@style/SplashTheme">
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainLogActivity" />
        <activity android:name=".MainProfileActivity" />
        <activity android:name=".RegistrationActivity" />
        <activity android:name=".NewPoemActivity" />
        <activity android:name=".NewUserInfoActivity" />
        <activity
            android:name=".ChatActivity"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".MenuActivity"
            android:theme="@style/TranslucentGray" />
        <activity android:name=".MessagesActivity" />
        <activity android:name=".UserProfileActivity" />
        <activity android:name=".TopAuthorsActivity"></activity>
    </application>

</manifest>